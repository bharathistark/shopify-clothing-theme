<form method="post" action="/cart">
  <table>
    {% for item in cart.items %}
      <tr>
        <td>{{ item.product.title }}</td>
        <td>{{ item.quantity }}</td>
        <td>{{ item.line_price | money }}</td>
      </tr>
    {% endfor %}
  </table>

  {% render 'terms-and-conditions' %}

  <button type="submit" id="checkout-button" disabled>Checkout</button>
</form>
